# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.IndexController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET /cake       controllers.IndexController.cake

GET /home        controllers.IndexController.home

GET /login      controllers.IndexController.login

GET /gamejson   controllers.GameController.gamejson

POST /addgame    controllers.GameController.newGame

GET /getgame    controllers.GameController.getGame

GET /adduser    controllers.GameController.addUser

GET /auth       controllers.AuthController.Authenticate

GET /auth/name  controllers.AuthController.GetName

PUT /updategame controllers.GameController.updateGame

POST /auth/:name/:pass      controllers.AuthController.GetToken(name: String, pass: String)

GET /javascriptRoutes   controllers.Application.javascriptRoutes

POST /login     controllers.AuthController.login